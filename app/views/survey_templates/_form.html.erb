<%= form_with(model: survey_template, local: true) do |form| %>
  <% if survey_template.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(survey_template.errors.count, "error") %> prohibited this survey_template from being saved:</h2>

      <ul>
      <% survey_template.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :survey_template_name %>
  </div>

  <%= form.fields_for :questions do |builder| %>
    <%= render 'question_fields', form: builder %>
  <% end %>
  <%= link_to_add_fields "Add Question", form, :questions %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
