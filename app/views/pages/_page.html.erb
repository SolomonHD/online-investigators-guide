
  <% if page.is_root? %>
    <div class="parent_page"> 
      <%= page.title %>
      <%= link_to 'Add Child Page', new_page_path(:parent_id => page), :class => 'button is-warning is-add' %>
      <%= link_to 'View', page, :class => 'button is-primary is-show' %></td>
      <%= link_to 'Edit', edit_page_path(page), :class => 'button is-gray is-edit'  %>
      <%= link_to 'Delete Page', page, method: :delete, data: { confirm: 'If any children pages exist, they will also be removed. Are you sure you want to delete this page? ' }, :class => 'button is-red is-delete'  %>
    </div>
  <% else %>
    <div class="nested">
      <%= page.title %>
      <%= link_to 'View', page, :class => 'button iis-show' %></td>
      <%= link_to 'Edit', edit_page_path(page), :class => 'button is-edit'  %>
      <%= link_to 'Delete Page', page, method: :delete, data: { confirm: 'If any children pages exist, they will also be removed. Are you sure you want to delete this page? ' }, :class => 'button is-delete'  %>
    </div>
  <% end %>
