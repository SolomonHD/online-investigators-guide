
<aside class="column is-3 is-narrow-mobile">
  <div class="menu sub-menu  is-hidden-mobile">
    <% if params[:user] and params[:view] %>
      <% if not current_user.id.to_s == params[:user] %>
        <%= render :partial => 'unfilteredSideMenu' %>
      <% else %>
        <%= render :partial => 'filteredSideMenu' %>
      <% end %>
    <% else %>
      <%= render :partial => 'unfilteredSideMenu' %>
    <% end %>
  </div>
  <div class="is-hidden-tablet">
    <button class="accordion">Section 3</button>
    <div class="panel">
      <div class="menu sub-menu ">
        <% if params[:user] and params[:view] %>
          <% if not current_user.id.to_s == params[:user] %>
            <%= render :partial => 'unfilteredSideMenu' %>
          <% else %>
            <%= render :partial => 'filteredSideMenu' %>
          <% end %>
        <% else %>
          <%= render :partial => 'unfilteredSideMenu' %>
        <% end %>
      </div>
    </div>
  </div>
  <%= render :partial => 'feedbackSurvey' %>
</aside>
