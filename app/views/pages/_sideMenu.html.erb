  <aside class="menu sub-menu column is-3 is-narrow-mobile is-hidden-mobile">
<% if params[:user] and params[:view] and current_user %>
  <% allPages = [] %>
  <ul class="menu-list">
    <% AnswersSurvey.where("survey_id = ?", params[:view]).each do |answer| %>
      <% AnswersLabel.where(:answer_id => answer.answer_id).each do |label| %>
        <% LabelsPage.where(:label_id => label.label_id).each do |page| %>
            <% @pages = Page.where(:id => page.page_id) %>
            <% @pages.each do |p| %>
              <% allPages.push(p) %>
              <!-- <li class="parent <% if current_page?(p) %> is-active is-active-parent<% end %>">
                <%= link_to p.title, page_path(p, :user => params[:user], :view => params[:view]) %>
              </li> -->
            <% end %>
        <% end %>
      <% end %>
    <% end %>
    <% allPages.sort.each do |page| %>
    <li class="parent <% if current_page?(page) %> is-active is-active-parent<% end %>">
      <%= link_to page.title, page_path(page, :user => params[:user], :view => params[:view]) %>
    </li>
    <% end %>
  </ul>
<% else %>
    <%= link_to 'Table of Contents', root_path, class: "#{cp(root_path)} table-of-contents" %>
    <% Page.roots.each do |p| %>
      <ul class="menu-list">
        <li class="parent <% if current_page?(p) %> is-active is-active-parent<% end %>">
          <%= link_to h(p.title), p %>
          <% if p.children.present? %>
            <%= render 'sideMenuSub', p: p %>
          <% end %>
        </li>
      </ul>
    <% end %>
    <!-- <p class="menu-label">
      General
    </p> -->

<% end %>
  </aside>
