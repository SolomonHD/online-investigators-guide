<%= form_with(model: page, local: true) do |form| %>
  <% if page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.hidden_field :parent_id %>

  <%= label_tag(:title, "Page Title:") %>
  <%= form.text_field(:title) %>

  <%= label_tag(:header, "Page Header:") %>
  <%= form.text_field(:header) %>

  <%= label_tag(:body, "Page Body:") %>
  <%= form.trix_editor :body %>


  <div class="field">
    <%= form.label "Labels" %><br />
    <%= form.collection_check_boxes :label_ids, Label.all, :id, :name do |b| %>
      <div class="collection-check-box">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
