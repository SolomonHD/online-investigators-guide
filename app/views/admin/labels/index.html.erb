<p id="notice"><%= notice %></p>

<h1 class="title">Labels<%= link_to 'New Label', new_admin_label_path, :class => 'button is-add is-warning large-button is-pulled-right' %></h1>

<table class="table is-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td data-label="Label Name"><%= label.name %></td>
        <td><%= link_to 'Edit', edit_admin_label_path(label), :class => 'button is-gray is-edit large-button' %>
          <%= link_to 'Delete', admin_label_path(label), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'button is-red is-delete large-button'  %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan=2>
        <%= link_to 'New Label', new_admin_label_path, :class => 'button is-warning is-add large-button' %>
      </td>
    </tr>
  </tbody>
</table>

<br>
