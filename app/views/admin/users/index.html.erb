<% if notice %><p id="notice" class="notification is-warning"><%= notice %></p><% end %>

<h1 class="title">User Management</h1>

<div class="search-container">
  <input type="text" id="userSearch" onkeyup="searchUsers()" placeholder="Search for users by netID or Name..." title="Type in a name">
</div>

<table class="table is-striped" id= "userTable">
  <thead>
    <tr>
      <th>NetID</th>
      <th>Name</th>
      <th colspan='2'>Is Admin?</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td data-label="NetID">
          <%= user.net_id %>
        </td>
        <td data-label="Name">
          <%= user.first_name %> <%= user.last_name %>
        </td>
        <td data-label="Is Admin?">
          <% if user.is_admin %>
            <span class="fa fa-check"></span>
          <% else %>
            <span class="fa fa-times"></span>
          <% end %>
        </td>
        <td>
          <% if user.is_admin %>
            <%= link_to 'Revoke Admin Access', admin_user_toggle_admin_path(user.id), :class => 'button is-stretch is-revoke is-red large-button' %>
          <% else %>
            <%= link_to ' Grant Admin Access ', admin_user_toggle_admin_path(user.id), :class => 'button is-stretch is-grant is-green large-button' %>
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
