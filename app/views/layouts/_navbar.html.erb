<nav class="navbar">
  <div class="navbar-brand logo">
    <%= image_tag("emory-shield-white.png") %>
    <div class="navbar-burger burger" data-target="navMenu">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
  <div class="navbars" id="navMenu">
    <div class="primary-navbar">
      <div class="navbar-menu">
        <div class="navbar-start site-branding is-hidden-mobile">
          <div class="eu-brand">Emory University</div>
          <div class="site-information">
            <div class="site-name">Online Investigator's Guide</div>
            <div class="department">Office of Clinical Research</div>
          </div>
        </div>

        <div class="navbar-end">
          <div class="navbar-item supporting-units is-hidden-mobile">
            <a class="navbar-item disabled">Supporting Units</a>
          <% Admin::SupportingUnit.where("url != ''").all.each do |unit| %>
              <a class="navbar-item" href="<%= unit.url %>" target="_blank">
                <%= unit.unit %>
              </a>
          <% end %>
          </div>
          <div class="navbar-item has-dropdown is-hoverable supporting-units is-hidden-tablet">
            <a class="navbar-link">
              Supporting Units
            </a>
              <div class="navbar-dropdown is-boxed">
                <% Admin::SupportingUnit.where("url != ''").all.each do |unit| %>
                    <a class="navbar-item" href="<%= unit.url %>" target="_blank">
                      <%= unit.title %>
                    </a>
                <% end %>
              </div>
          </div>
        </div>
      </div>
    </div>
    <div class="secondary-navbar">
      <div class="navbar-menu">
        <div class="navbar-start">
          <a class="navbar-item" href="/">
            Table of Contents
          </a>
        </div>
        <div class="navbar-end">
          <div class="navbar-item">
            <%= form_tag(search_path, :method => "get", :target => "_self") do %>
              <div class="field has-addons">
                <div class="control">
                  <%= text_field_tag :search, params[:search], placeholder: "Search Pages" %>
                </div>
                <div class="control">
                  <%= button_tag(type: "submit", class: "button is-info") do %>
                    <span class="fa fa-search"></span>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <% if Rails.env.local? %>
            <div class="navbar-item">
              <% if not current_user %>
                <p class="control">
                  <%= link_to 'login', controller: 'sessions', action: 'new', :class => 'bd-tw-button button', :target => '_self' do %>
                    <span class="icon">
                      <i class="fa fa-lock"></i>
                    </span>
                    <span>
                      Log In
                    </span>
                  <% end %>
                </p>
              <% end %>
            </div>
          <% else %>
            <div class="navbar-item">
              <% if not current_user %>
                <p class="control">
                  <%= link_to auth_scheme, :class => 'bd-tw-button button', :target => '_self' do %>
                    <span class="icon">
                      <i class="fa fa-lock"></i>
                    </span>
                    <span>
                      Log In
                    </span>
                  <% end %>
                </p>
              <% end %>
            </div>
          <% end %>
          <% if current_user %>
          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link  is-active" href="">
              Welcome, <%= current_user.first_name %>
            </a>
            <div class="navbar-dropdown ">
              <% current_user.surveys.each do |view| %>
                <%= link_to view.name, root_path(:user => current_user.id, :view => view.id), :class => 'navbar-item' %>
              <% end %>
              <%= link_to 'Manage my Views', user_surveys_path(current_user), :class => 'navbar-item' %>

              <% if current_user.is_admin? %>
                <hr class="navbar-divider">
                <%= link_to 'Admin Portal', admin_path, :class => 'navbar-item' %>
              <% end %>
              <hr class="navbar-divider">
              <% if Rails.env.local? %>
                <%= link_to session_path(current_user), method: "delete", :class => 'navbar-item is-active', :target => '_self' do %>
                  <span>
                    Log Out
                  </span>
                <% end %>
              <% else %>
                <%= link_to single_logout_omniauth_callbacks_path(:slo => '1'), :class => 'navbar-item is-active', :target => '_self' do %>
                  <span>
                    Log Out
                  </span>
                <% end %>
              <% end %>
            </div>
          </div>
         <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>
